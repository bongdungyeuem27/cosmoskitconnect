{
  "name": "cosmoskitconnect",
  "description": "Monorepo for WalletConnect",
  "private": true,
  "keywords": [
    "wallet",
    "walletconnect",
    "ethereum",
    "jsonrpc",
    "mobile",
    "qrcode",
    "web3",
    "crypto",
    "cryptocurrency",
    "dapp"
  ],
  "author": "WalletConnect, Inc. <walletconnect.com>",
  "homepage": "https://github.com/walletconnect/walletconnect-monorepo/",
  "license": "Apache-2.0",
  "scripts": {
    "clean": "bun run clean --workspaces --if-present",
    "lint": "bun run lint --workspaces --if-present",
    "build": "lerna run prepare --stream",
    "prettier": "bun run prettier --workspaces --if-present",
    "test": "bun run test --workspaces --if-present",
    "test:ignoreUnhandled": "bun run test:ignoreUnhandled --workspaces --if-present",
    "check": "bun run lint; bun run build; bun run test",
    "reset": "bun run clean; bun run check",
    "new-version": "lerna version --no-private --no-git-tag-version --exact && ./scripts/update_relayer_sdk_version.sh",
    "pre-publish": "bun run new-version; bun run reset",
    "bun-publish:rc": "lerna exec --no-private -- bun publish --access public --tag rc",
    "bun-publish:latest": "lerna exec --no-private -- bun publish --access public --tag latest",
    "bun-publish:next": "lerna exec --no-private -- bun publish --access public --tag next",
    "bun-publish:canary": "lerna exec --no-private -- bun publish --access public --tag canary"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/walletconnect/walletconnect-monorepo.git"
  },
  "bugs": {
    "url": "https://github.com/walletconnect/walletconnect-monorepo/issues"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "22.0.2",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "13.3.0",
    "@types/node": "18.7.3",
    "@types/sinon": "10.0.13",
    "@typescript-eslint/eslint-plugin": "5.33.0",
    "@typescript-eslint/parser": "5.33.0",
    "esbuild": "0.17.19",
    "eslint": "8.22.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-config-standard": "17.0.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-n": "15.7.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-promise": "6.0.0",
    "eslint-plugin-react": "7.30.1",
    "eslint-plugin-standard": "5.0.0",
    "lerna": "7.1.4",
    "prettier": "2.7.1",
    "rollup": "2.78.0",
    "rollup-plugin-esbuild": "4.9.3",
    "sinon": "14.0.0",
    "typescript": "4.9.5",
    "vitest": "0.22.1"
  },
  "workspaces":[
    "packages/*"
  ]
}
